{
  "name": "auditboard-ember-test-runner",
  "icon": "assets/logo.png",
  "displayName": "AuditBoard Ember Test Runner",
  "description": "Run Ember tests directly from VSCode, exclusive for AuditBoard projects.",
  "publisher": "auditboard",
  "repository": {
    "type": "git",
    "url": "https://github.com/chunfat/ember-test-vscode-runner.git"
  },
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "workspaceContains:**/*test.js",
    "workspaceContains:**/*test.ts",
    "workspaceContains:**/*test.gjs",
    "workspaceContains:**/*test.gts"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "auditboard-ember-test-runner.toggleDebug",
        "title": "AuditBoard Ember Test Runner: Toggle Debug Mode"
      }
    ],
    "configuration": {
      "title": "AuditBoard Ember Test Runner",
      "properties": {
        "emberTestRunner.debug": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug mode for the Ember Test Runner"
        },
        "emberTestRunner.testRunnerBaseUrl": {
          "type": "string",
          "default": "http://localhost:9002/tests/index.html",
          "description": "Base URL for the AuditBoard Ember test runner"
        },
        "emberTestRunner.hidePassed": {
          "type": "boolean",
          "default": true,
          "description": "Add 'hidepassed' query parameter to hide passing tests in the test runner"
        },
        "emberTestRunner.includeFile": {
          "type": "boolean",
          "default": true,
          "description": "Add 'file' query parameter with the test file name to the test runner URL"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.20.7",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "@babel/parser": "^7.27.0",
    "@babel/traverse": "^7.27.0"
  }
}
